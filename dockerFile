FROM php:8.2-apache

# تحديث وتثبيت الحزم الأساسية
RUN apt-get update && apt-get upgrade -y && apt-get install -y \
    libicu-dev \
    libzip-dev \
    zip \
    unzip \
    curl \
    git \
    libpng-dev \
    libjpeg-dev \
    libfreetype6-dev \
    libonig-dev \
    libxml2-dev \
    libssl-dev \
    nodejs \
    npm \
    && rm -rf /var/lib/apt/lists/*

# تكوين وتثبيت إضافات PHP
RUN docker-php-ext-configure gd --with-freetype --with-jpeg \
    && docker-php-ext-configure intl \
    && docker-php-ext-install \
        intl \
        zip \
        pdo_mysql \
        gd \
        mbstring \
        exif \
        pcntl \
        bcmath \
        soap \
        sockets \
        opcache \
    && docker-php-ext-enable intl zip

# تمكين Apache mod_rewrite
RUN a2enmod rewrite headers

# تثبيت Composer
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

# نسخ المشروع
WORKDIR /var/www/html
COPY . .

# تثبيت dependencies مع تجاهل متطلبات المنصة مؤقتاً
RUN composer install --optimize-autoloader --no-scripts --no-interaction --ignore-platform-reqs

# تثبيت npm dependencies
RUN npm install && npm run build

# تعديل الصلاحيات
RUN chown -R www-data:www-data /var/www/html/storage \
    && chown -R www-data:www-data /var/www/html/bootstrap/cache \
    && chmod -R 775 /var/www/html/storage \
    && chmod -R 775 /var/www/html/bootstrap/cache

# تعيين Apache document root
ENV APACHE_DOCUMENT_ROOT /var/www/html/public
RUN sed -ri -e 's!/var/www/html!${APACHE_DOCUMENT_ROOT}!g' /etc/apache2/sites-available/*.conf \
    && sed -ri -e 's!/var/www/!${APACHE_DOCUMENT_ROOT}!g' /etc/apache2/apache2.conf /etc/apache2/conf-available/*.conf

# إنشاء ملف php.ini مخصص
RUN echo "extension=intl.so" >> /usr/local/etc/php/conf.d/docker-php-ext-intl.ini \
    && echo "extension=zip.so" >> /usr/local/etc/php/conf.d/docker-php-ext-zip.ini

CMD ["apache2-foreground"]